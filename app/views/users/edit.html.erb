<h1>Edit <%= @user.username %>'s profile</h1>

<div class="row">
  <div class="col-md-6">
<%= form_for @user do |f| %>
<%= f.label "username" %>
<%= f.text_field "username", class: 'form-control'%><br>
<%= f.label "display name" %>
<%= f.text_field "display_name", class: 'form-control'%><br>
<%= f.label "icon link" %>
<%= f.text_field "icon", class: 'form-control'%><br>

<%= f.submit "Submit", class: "btn btn-success" %>
<% end %>
</div>
</div>
<br>
<a href="password">Change password.</a>
<br><br>
<%= link_to "Delete profile", @user, class: "btn btn-lg btn-danger", method: "delete" %>
