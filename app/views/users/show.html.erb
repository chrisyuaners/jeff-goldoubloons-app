<h1><%= @user.username %>'s profile</h1>
<ul>
  <li>Name: <%= @user.display_name.titlecase %></li>
  <% @user.coins.each do |c| %>
  <li><%= c.pressing.name %></li>
  <img src="<%= c.pressing.image_url %>">
  <% end %>
  <li><%= @user.wallet %> <%= button_to "Add To Wallet", wallet_path, method: "get" %></li>
</ul>
<br>
<% if flash[:message] %>
  <%= flash[:message] %>
<% end %>
<center><%= link_to "Buy a coin", click_path, class: "btn btn-lg btn-primary", method: "post"%></center>
<br>
<center><%= link_to "Edit profile", edit_user_path, class: "btn btn-lg btn-primary" %></center>
