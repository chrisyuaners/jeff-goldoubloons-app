<h1>Add funds to <%= @user.username %>'s wallet</h1>


<br>
<div class="card"></div>

<form action="#">

  <div class="container-fluid grid">

    <div class="row pull-center">
      <div class="col-md-4">

        <div class="well">

          <div class="row card">
          </div>

          <br/>

          <div class="row-fluid">
            <div class="col-md-8">
              <div class="form-group">
                <label>Credit Card Number </label>
                <input type="text" placeholder="•••• •••• •••• ••••" name="number" class="form-control" />
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Expiration</label>

                <input type="text" placeholder="MM/YY" name="expiry" class="form-control" />

              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="col-md-8">
              <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" />
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">

                <label>CVV </label>

                <input type="text" placeholder="•••" name="cvv" class="form-control" />
              </div>
            </div>
          </div>

          <div class="row ">

          </div>

        </div>
      </div>
    </div>

</form>

<%= form_for @user do |f| %>
<%= f.label "wallet", "Amount $" %>
<%= f.number_field "wallet" %> USD<br>

<%= f.submit "Submit" %>
<% end %>
